<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>        
      </h1>
      <%= @user.suppervisor? ? 'Suppervisor' : 'Member' %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if !@subjects.nil? %>
      <h1>
        <%= @course.name %>
      </h1>
      <ul class="users">
        <%= render @subjects %>
      </ul>
    <% end %>
  </div>
</div>
