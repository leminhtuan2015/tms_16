<li>
  <% if user.avatar_url.nil? %>
    <%= gravatar_for user %>
  <% else %>
    <%= image_tag user.avatar.thumbnail.url %>
  <% end %>
  <%= link_to user.name, edit_suppervisor_user_path(user) %>
  | <%= user.suppervisor? ? 'Suppervisor' : 'Member'%>
  | <%= link_to_if !current_user?(user), "delete", suppervisor_user_path(user), 
    method: :delete, data: {confirm: "You sure?"} %>
</li>
