<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Description</th>
      <th>Subject</th>
      <th>Trainner</th>
      <th>Supervisor</th>
      <th>Update</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row"><%= @course.id %></th>
      <td>
        <%= link_to @course.name, course_path(@course) %>
      </td>
      <td><%= @course.description %></td>
      <td>
        <% @course.course_subjects.each do |course_subject|%>
          <%= link_to course_subject.subject.name, 
                    subject_path(course_subject.subject) %>
          <%= "."%>
        <% end %>
      </td>
      <td><%= @course.enrollments.count %></td>
      <td><%= "..." %></td>
      <td>
        <%= link_to "Edit.", edit_course_path(@course) %>
        <%= link_to "Assign user.", course_enrollments_path(@course) %>
        <%= link_to "Add subject.", ""%>
        <%= link_to "Delete.", course_path(@course),
                    method: :delete,
                    data: { confirm: 'Drop this course?' }%>
      </td>
    </tr>
  </tbody>
</table>