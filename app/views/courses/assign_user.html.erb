<h2>Add users</h2>
<%= form_for ([@course, @course.enrollments.build]) do |f| %>
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Selected</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, i| %>
      <tr>
        <th scope="row"><%=user.id%></th> 
        <td>
          <%= link_to user.name, user_path(user)%>
        </td>
        <td>
        <%if @course.users.where(:id => user.id).blank?
          @checked = ""
        else   
          @checked = "checked=''"
        end%>
          <div class="checkbox">
            <input name="subjects[<% i %>][subject_id]"
                   type="checkbox",
                   <%=@checked%>,
                   value=<%=user.id%>>
          </div>
        </td>
      </tr>
    <% end %> 
    <tr>
      <td>
        <button type="submit" class="btn btn-default">Save
        </button>
      </td>
    </tr>
  </tbody>
</table>
<input type="hidden" name="course_id" 
       value=<%= @course.id%>>
<%end%>
